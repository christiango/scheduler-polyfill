{
  "name": "@christiango/scheduler-polyfill",
  "version": "1.0.2",
  "description": "Polyfill of self.scheduler API",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "sideEffects": false,
  "directories": {
    "doc": "docs"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "eslint src test",
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js"
  },
  "homepage": "https://github.com/christiango/scheduler-polyfill",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christiango/scheduler-polyfill.git"
  },
  "bugs": {
    "url": "https://github.com/christiango/scheduler-polyfill/issues"
  },
  "browserslist": [
    "supports es6-module"
  ],
  "author": "The Chromium Authors",
  "license": "Apache-2.0",
  "keywords": [
    "scheduler",
    "scheduling",
    "postTask",
    "TaskController",
    "TaskSignal"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^8.2.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "mocha": true,
      "es6": true
    },
    "globals": {
      "expect": true,
      "assert": true
    },
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  }
}
